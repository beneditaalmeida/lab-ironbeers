<div class="card mb-3 mx-auto border-0" style="max-width: 900px;">
<div class="row no-gutters">
    <div class="col-md-4">
        <img src={{this.image_url}} class="card-img-left" style="height: 30%">
    </div>
    <div class="col-md-8">
    <div class="card-body">
        <h4 class="card-title">{{this.name}}</h4>
        <h5 class="card-text">{{this.tagline}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p>Food Pairing</p>
        <p class="card-text">{{this.food_pairing}}</p>  
        <p>Brewers Tips</p>
        <p class="card-text">{{this.brewers_tips}}</p> 
    </div>
    </div>
</div></div>
